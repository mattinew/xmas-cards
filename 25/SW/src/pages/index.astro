---
import '../styles/global.css';

import { Image } from 'astro:assets';

import img25 from '../assets/25.gif';
import snd25 from '../assets/25.mp3';

import img_header from '../assets/header.gif';
import img_main from '../assets/main.gif';
import img_play from '../assets/play.gif';
import img_stop from '../assets/stop.gif';
import img_hi from '../assets/hi.gif';
import img_footer from '../assets/footer.gif';
---

<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>XMAS 25 Greetings by matti</title>
  </head>

  <body>
    <div class="card">

      <!-- Header -->
      <div class="header">
        <img src={img_header.src} alt=""/>
      </div>

      <!-- Main -->
      <main class="main">

        <!-- Audio file to be launched on balloon click -->
        <audio id="snd25" src={snd25} preload="auto"></audio>
        <!-- <div class="img_wrap" onclick="document.getElementById('snd25').play();">
          <Image src={img25} alt="" quality="max" layout="full-width" />
        </div> -->

        <!-- Main image -->
        <div class="img_wrap">
          <img src={img_main.src} alt=""/>
        </div>
        
        <img src={img_play.src} id="id_img_play" alt="" onclick="this.classList.add('hidden'); document.getElementById('id_img_stop').classList.remove('hidden');document.getElementById('snd25').play();"/>
        <img src={img_stop.src} id="id_img_stop" class="hidden" alt="" onclick="this.classList.add('hidden'); document.getElementById('id_img_play').classList.remove('hidden');document.getElementById('snd25').pause();"/>
        <a href="mailto:matti.new@gmail.com">
          <img src={img_hi.src} id="id_img_hi" alt="" />
        </a>

      </main>

      <!-- Footer -->
      <div class="footer">
        <img src={img_footer.src} alt=""/>
      </div>

    </div>
  </body>

</html>